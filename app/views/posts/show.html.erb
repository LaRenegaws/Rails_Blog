<div id="page_wrapper">	
	<h1 class="title">
		<%= @post.title %>
	</h1>

	<p class="date">
		Submitted <%= time_ago_in_words(@post.created_at) %> Ago
	</p>

	<p class = "body">
		<%= simple_format @post.body%>
	</p>

	<div class="buttons">
		<% if current_user %>
		<button class="button">
			<%= link_to 'Edit Post' , edit_post_path(@post) %>
		</button>
		<button class="button">
			<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?"} %>
		</button>
		<% end %>
	</div>
	
	<div class = "disqus">
		<%= render 'disqus' %>
	</div>

</div>